    <table>
        <tbody>
            <% book.book_comments.each do |book_comment| %>
            <tr>
                <td><%= image_tag book_comment.user.get_profile_image, size:"100x100" %></td>
                <td><%= book_comment.user.name %></td>
                <td><%= book_comment.comment %></td>
                <td>
                    <% if book_comment.user == current_user %>
                        <%= link_to book_book_comment_path(book_comment.book, book_comment), method: :delete,remote: true do %>
                        <i class="btn btn-sm btn-danger" >Destroy</i>
                        <% end %>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>


